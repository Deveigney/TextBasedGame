<Window x:Class="ItemsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ItemsWindow" Height="256" Width="211" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="DropBtn" Content="Drop" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="75" Height="22"/>
        <Button x:Name="UseBtn" Content="Use" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="CloseBtnn" Content="Close" HorizontalAlignment="Left" Margin="90,194,0,0" VerticalAlignment="Top" Width="103"/>
        <ListBox HorizontalAlignment="Left" Height="179" Margin="93,10,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="ListBox_SelectionChanged">
            <ListBox.Items>
                <ListBoxItem x:Name="List1" Content="Hp Boost" Visibility="Visible"/>
                <ListBoxItem x:Name="List2" Content="Shield" Visibility="Visible"/>
                <ListBoxItem x:Name="List3" Content="Leather" Visibility="Visible"/>
            </ListBox.Items>
        </ListBox>

    </Grid>
</Window>
